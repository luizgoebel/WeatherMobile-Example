<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherMobile.APP.MainPage">

    <StackLayout Padding="10">
        <Label Text="Previsão do Tempo" FontSize="24" HorizontalOptions="Center" Margin="0,20,0,20" />

        <Entry Placeholder="Digite a cidade" x:Name="cidadeEntry" />

        <Button Text="Obter Previsão" Clicked="GetWeatherButton_Clicked" HorizontalOptions="Center" Margin="0,20,0,20" />

        <Label Text="Temperatura: " FontSize="18" x:Name="temperaturaLabel" />
        <Label Text="Condição: " FontSize="18" x:Name="condicaoLabel" />
        <Label Text="Umidade: " FontSize="18" x:Name="umidadeLabel" />
        <Label Text="Velocidade do Vento: " FontSize="18" x:Name="velocidadeVentoLabel" />
    </StackLayout>

</ContentPage>
